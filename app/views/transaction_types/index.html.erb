<p id="notice"><%= notice %></p>

<h1>Transaction Types</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transaction_types.each do |transaction_type| %>
      <tr>
        <td><%= transaction_type.description %></td>
        <td><%= transaction_type.operation %></td>
        <td><%= link_to 'Show', transaction_type %></td>
        <td><%= link_to 'Edit', edit_transaction_type_path(transaction_type) %></td>
        <td><%= link_to 'Destroy', transaction_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

